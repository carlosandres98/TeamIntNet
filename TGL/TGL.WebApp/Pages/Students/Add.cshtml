@page
@model TGL.WebApp.Pages.Students.AddModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add student</h2>
<form method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Name</label>
        <input asp-for="Student.name" type="text" class="form-control" required id="exampleFormControlInput1">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Age</label>
        <input asp-for="Student.age" type="text" class="form-control" required id="exampleFormControlInput2">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Carrer</label>
        <input asp-for="Student.carrer" type="text" class="form-control" required id="exampleFormControlInput3">
    </div>

    @if (ModelState.IsValid)
    {
        <div class="alert alert-success" role="alert">
            Student create Successful
        </div>
    }
    <button type="submit" class="btn btn-primary">Add student</button>
</form>
<br />
<br />
<a class="btn btn-danger" asp-page="./Index">Cancel</a>

